@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create new category</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name">Category name</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="@Model.Name" class="text-danger mt-2" style="font-size:14px"></span>
                </div>
                <button type="submit" class="btn btn-success mr-2" asp-action="Create">Create</button>
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section scripts{ 
    <partial name="_Validation" />
}

