
@model Product
@{
    ViewData["Title"] = "Detail";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <img src="~/img/@Model.Image" alt="#" style="width:100px; height:100px" />
            </h4>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Title">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count"></label>
                <input asp-for="Count" class="form-control" placeholder="Description">
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Name">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


        </div>
    </div>
</div>
<form class="forms-sample" method="post">
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-icon-text">
        <i class="mdi mdi-keyboard-backspace btn-icon-prepend"></i>
        Back
    </a>
</form>

