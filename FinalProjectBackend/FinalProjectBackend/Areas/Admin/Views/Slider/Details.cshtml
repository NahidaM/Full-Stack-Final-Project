@model Slider
@{
    ViewData["Title"] = "Delete";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <img src="~/img/@Model.Image" alt="#" width="100%" />
            </h4>
        </div>
    </div>
</div>
<a asp-controller="Slider" asp-action="Index" class="btn btn-secondary btn-icon-text">
    <i class="mdi mdi-keyboard-backspace btn-icon-prepend"></i>
    Back
</a>

