@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-grid gap-2 d-md-flex justify-content-between">
                <h3 class="card-title">Sliders</h3>
                @if (ViewBag.sliderCount < 5)
                {
                    <a asp-controller="Slider" asp-action="Create" class="btn btn-success btn-icon-text">
                        <i class="mdi mdi-plus btn-icon-prepend"> Add</i>
                    </a>
                }
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Photo
                            </th>
                            <th>
                                Options
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.sliderCount > 1)
                        {
                            @foreach (Slider slide in Model)
                            {
                                <tr>
                                    <td>
                                        <img style=" width: 100px;  height: 100px;" src="~/img/@slide.Image" alt="#" />
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@slide.Id">
                                            <button class="btn btn-inverse-secondary btn-icon">
                                                <i class="mdi mdi-information-variant"></i>
                                            </button>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@slide.Id">
                                            <button class="btn btn-inverse-primary btn-icon">
                                                <i class="mdi mdi-pencil"></i>
                                            </button>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@slide.Id">
                                            <button class="btn btn-inverse-danger btn-icon">
                                                <i class="mdi mdi-delete"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <img src="~/img/@Model.ElementAt(0).Image" alt="#" />
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@Model.ElementAt(0).Id">
                                        <button class="btn btn-inverse-secondary btn-icon">
                                            <i class="mdi mdi-information-variant"></i>
                                        </button>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@Model.ElementAt(0).Id">
                                        <button class="btn btn-inverse-primary btn-icon">
                                            <i class="mdi mdi-pencil"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

