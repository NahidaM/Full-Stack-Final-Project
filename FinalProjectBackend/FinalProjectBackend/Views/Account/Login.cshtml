@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<section id="login">
    <div class="container">
        <div class="account d-flex">
            <div class="left-side">
                <div class="header text-center">
                    <h1>Salam</h1>
                    <p>Mövcud hesabına daxil olursan</p>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post">

                    <div class="form-group">
                        <label for="email">
                            <i class="far fa-envelope"></i>
                        </label>
                        <input asp-for="Email"
                               class="form-control"
                               type="text"
                               placeholder="Email Address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="password">
                            <i class="fas fa-lock"></i>
                        </label>
                        <input asp-for="Password"
                               class="form-control"
                               type="password"
                               placeholder="Password" />
                        <span class="show-password"><i class="fas fa-eye"></i></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-0 mt-4">
                        <button type="submit"
                                data-text="login"
                                class="button-one submit-button mt-15">
                          Daxil Ol
                        </button>
                    </div>
                </form>
            </div>
            <div class="right-side">
                <div class="sign-up">
                    <h2>Hesabınız yoxdur?</h2>
                    <p>Buradan yeni hesab yarada bilərsiniz</p>
                    <a asp-controller="Account" asp-action="Register">Qeydiyyat</a>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

