@model List<BasketVM>
@{
    ViewData["Title"] = "Basket";
    int count = 0;
}

<div class="container">
  
    <div class="row my-5" id="basket">
        @if (Model.Count() > 0)
        {
            <h2 class="col-12 text-right">Ümumi məbləğ : @ViewBag.Total AZN</h2>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">S/N</th>
                        <th scope="col">Şəkil</th>
                        <th scope="col">Ad</th>
                        <th scope="col">Say</th>
                        <th scope="col">Qiymət</th>
                        <th scope="col">Sil</th>
                    </tr>
                </thead>
                <tbody id="basket-body">
                    @foreach (BasketVM pro in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img src="~/img/@pro.Image" style="height:60px; width:100px" alt="#" /></td>
                            <td>@pro.Name</td>
                            <td>
                                <a style="color:red;text-decoration:none" asp-controller="Main" asp-action="Remove" asp-route-id="@pro.Id">
                                    <i class="fas fa-minus"></i>
                                </a>
                                @pro.Count
                                <a style="color:green;text-decoration:none" asp-controller="Main" asp-action="Add" asp-route-id="@pro.Id">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </td>
                            <td>@pro.Price</td>
                            <td>
                                <a style="color:red;cursor:pointer" class="delete-pro" asp-controller="Main" asp-action="DeleteProduct" asp-route-id="@pro.Id">
                                    <i class="far fa-trash-alt" style="font-size:25px"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
             <div class="container">
                <ul style="list-style:none; display:flex">

                   <li style="height: 105px; width: 160px; border: 2px solid #e6e6e6; background: #fff;">
                   <i style=" font-size: 50px; color: #e48611; margin-left: 29%; margin-top: 17%;"
                   class="fas fa-shopping-cart"></i>
                </li>
                   <li style="margin-left:70px; height: 105px; width: 800px; border: 2px solid #e6e6e6; background: #fff;">
                       <div class="info" style="padding:20px">
                           <div class="row">
                               <div class="col-8">
                                   <p style=" margin-top: 16px; margin-left: 40px; font-weight: 500; font-size: 18px; color: #333;">
                                   Səbətinizdə məhsul tapılmadı</p>
                               </div>
                               <div class="col-4">
                                   <a class="btn" style=" padding: 9px 25px; font-size: 18px;
                                         border-radius: 3px; color: #fff; background-color: #f77d1a; border: 1px solid #f77d1a; display: block; font-weight: 700;
                                    " asp-controller="Product" asp-action="Index">Məhsulları Görüntülə</a> 
                               </div>
                           </div>
                          
                       </div>
                       
                     
                   </li>
                </ul>
             </div>
           
           
        }
    </div>
</div>

