@model SubscribeVM
@{
    ViewData["Title"] = "Default";
}

<!-- SUBSCRIBE SECTION START -->
<section id="subscribe">
    <div class="subscribe-area pt-60 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="subscribe-content text-center">
                        <h2>@Model.Subscribe</h2>
                    </div>
                    <div class="text-center" asp-validation-summary="ModelOnly"></div>
                    <form asp-controller="Account" asp-action="Subscribe" method="post">
                        <div class="container" style="background-color: white">
                            <input type="text" placeholder="Email" asp-for="@Model.SubscribedEmail.Email" required />
                            <span asp-validation-for="@Model.SubscribedEmail.Email"></span>

                        </div>

                        <div class="container">
                            <input type="submit" value="Abunə olun" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- SUBSCRIBE SECTION END -->

@section Scripts{
    <partial name="_Validation" />

}  